          <view>
            <text>合计：￥{{item.payment}}</text>
          </view>
        </view> -->
      </view>
      <view style="height: {{tabbarHeight}}px;">
      </view>
    </scroll-view>
  </swiper-item>

</swiper>

<mp-tabbar current='1' class="tabbar" style="position:fixed;bottom:0;width:100%;left:0;right:0;z-index: 9999;" list="{{list}}" bindchange="tabChange"></mp-tabbar>