page {
  background-color: var(--BackGround2);
}

.clear {
  clear: both;
  overflow: hidden;
}

navigator {
  display: inline;
}

.list {
}

.list .list_item {
  /* margin-top: 10px; */
  padding: 10px;
  height: 100px;
  border-bottom: 10px solid var(--IsolationColor);
  position: relative;
}

.list .list_item .img {
  float: left;
  width: 30%;
  height: 100%;
}

.list .list_item .img image {
  width: 100%;
  height: 100%;
}

.list .list_item .info {
  width: 60%;
  float: right;
  height: 110px;
  position: relative;
  box-sizing: border-box;
  padding-left: 10px;
}

.sc {
  width: 8%;
  float: right;
  height: 100px;
  position: relative;
  text-align: left;
}

.sc>checkbox {
  margin-top: 35px;
}

.list .list_item .info .title {
  color: #333;
  font-size: 12px;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}



.list .list_item .info .num {
  position: absolute;
  left: 0px;
  bottom: 10px;
  color: #747474;
  font-size: 15px;
  margin-left: 10px;
}

.list .list_item .info .delete {
  font-size: 15px;
}

.list .list_item .info .delete>button {
  font-size: 10px;
}



.shareBtn {
  position: fixed;
  bottom: 10rpx;
  width: 100%;
  text-align: center;
}

/* 商品辅加信息 */
.product_add {
  display: flex;
  justify-content: space-between;
}

.product_add>view {
  font-size: 10px;
  opacity: 0.6;
}

.product_footer {
  font-weight: 600;
  font-size: 12px;
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom: 0;
  color: var(--IgnoreMessage);
  width: calc(100% - 15rpx);
}

.product_footer .price {}

.product_footer .price2 {}

/* 商品分配标签 */
.product_isfenpei {
  display: flex;
}

.product_isfenpei .isdelivery {
  font-size: 22rpx;
  color: red;
  border: 1px solid rgba(255, 0, 0, 0.3);
  height: 100%;
  padding-left: 5rpx;
  padding-right: 5rpx;
  border-radius: 5rpx;
}

.product_isfenpei .issorting {
  font-size: 22rpx;
  color: red;
  border: 1px solid rgba(255, 0, 0, 0.3);
  height: 100%;
  padding-left: 5rpx;
  padding-right: 5rpx;
  border-radius: 5rpx;
  margin-left: 10rpx;
}

.product_status {
  position: absolute;
  width: 100%;
  left: -10px;
  padding: 10px 10px;
  top: 0px;
  height: 100px;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.product_status>view {
  position: absolute;
  left: calc(50% - 30rpx);
  top: calc(50% - 50rpx);
  line-height: 50rpx;
  border: 4px solid rgba(255, 0, 0, 0.5);
  color: red;
  padding: 10rpx;
}