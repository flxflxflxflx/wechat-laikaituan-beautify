.body {
  background-color: var(--BackGround2);
  padding: 10rpx;
}

button {
  border-radius: 35px !important;
  background-color: rgb(101, 196, 170) !important;
  color: #fff !important;
  font-weight: 400 !important;
}


/* 重要的文本 */
.uniqueText {
  color: red;
  vertical-align: sub;
}

/* 使用弹性盒子 */
.biaotititle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

page {
  font-size: 14px;
}

/* 字数限制 */
.fontBox {
  font-size: 14px;
  line-height: 60rpx;
  opacity: 0.5;
}

/* 文本域 */
.textyu>textarea {
  height: 100rpx;
  font-size: var(--TEXT_TITLE);
}

.productTitle {
  font-size: var(--TEXT_TITLE);
}

.weui-cell {
  padding: 16px 40rpx;
}

.weui-cells {
  margin: 0;
}

/* 商品标题 */
.productTitleBox {
  background-color: #fff;
  border-radius: 10rpx 10rpx 0 0;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

/* 商品详情 */
.productDetailsBox {
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

/* 确认发布 */
.qrfb {
  width: 100%;
  margin: 20rpx 0;
  padding: 0 0 20rpx 0;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.qrfb>button {
  font-size: var(--TEXT_TITLE);
}

.clearBox {
  overflow: hidden;
}


/* 商品详情--上传视频图片 */
/* 上传的图片 */
.img-list {
  display: flex;
  flex-wrap: wrap;
}

.img-li {
  width: 200rpx;
  height: 200rpx;
  margin-right: 39rpx;
  margin-bottom: 23rpx;
}

.img-li:first-child {
  margin-right: 0;
}

.img-li image {
  width: 100%;
  height: 100%;
}

.icon-delete {
  width: 48rpx !important;
  height: 48rpx !important;
  position: relative;
  float: right;
  margin-top: -229rpx;
  margin-right: -15rpx;
  z-index: 99;
}

.icon-deletes {
  width: 48rpx !important;
  height: 48rpx !important;
  position: relative;
  float: right;
  margin-top: -9rpx;
  margin-left: -10rpx;
  margin-right: 29rpx;
  z-index: 99;
}

.content-input-z {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999999;
}

.content-input-z {
  margin-top: 31rpx;
}

.content-input-z view image {
  width: 32rpx;
  height: 31rpx;
  margin-right: 11rpx;
}

.content-input-z view {
  display: flex;
  align-items: center;
}



.mask {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  width: 100%;
  height: 100%;
}

.model_box {
  width: 80%;
  position: fixed;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 1000;
  background: #fff;
  height: 40%;
  border-radius: 15rpx;
}

.mb-content {
  padding: 10rpx 20rpx 10rpx 25rpx;
  box-sizing: border-box;
  height: 80%;
  overflow: scroll;
}

.mb-tit {
  padding: 15rpx 0rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  text-align: center;
}

.mb-con {
  font-size: 14px;
  text-indent: 2rem;
  line-height: 1.5;
}

.checkbox {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 20%;
  background-color: #fff;
  border-radius: 10px;
  padding: 10px;
}

.checkbox .qx {
  width: 50%;
  text-align: center;
  border-right: 1rpx solid #efefef;
}

.checkbox .qr {
  height: 50px;
  position: relative;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-around;
  align-content: flex-end;
  width: 100%;
  box-sizing: border-box;
  padding-right: 3%;

}


.bottombuttonBox>view {
  border-radius: 35px !important;
  background-color: rgb(101, 196, 170) !important;
  color: #fff !important;
  font-weight: 400 !important;
  width: 150rpx;
  text-align: center;
  margin-left: 15px;
}