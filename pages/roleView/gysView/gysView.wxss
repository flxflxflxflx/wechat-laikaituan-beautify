.body {
  background-color: var(--BackGround2);
  padding: 10rpx;
}

button {
  border-radius: 35px !important;
  background-color: rgb(101, 196, 170) !important;
  color: #fff !important;
  font-weight: 400 !important;
}


/* 重要的文本 */
.uniqueText {
  color: red;
  vertical-align: sub;
}

/* 使用弹性盒子 */
.biaotititle {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
page{
  font-size: 14px;
}

/* 字数限制 */
.fontBox {
  font-size: 14px;
  line-height: 60rpx;
  opacity: 0.5;
}

/* 文本域 */
.textyu>textarea {
  height: 100rpx;
  font-size: 14px;
}

.productTitle {
  font-size: 14px;
}

.weui-cell {
  padding: 16px 40rpx;
}

.weui-cells {
  margin: 0;
}

/* 商品标题 */
.productTitleBox {
  background-color: #fff;
  border-radius: 10rpx 10rpx 0 0;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

/* 商品详情 */
.productDetailsBox {
  background-color: #fff;
  border-radius: 0 0 10rpx 10rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  padding: 30rpx 40rpx;
}

/* 确认发布 */
.qrfb {
  width: 100%;
  margin: 20rpx 0;
  padding: 0 0 20rpx 0;
  text-align: center;
}
.clearBox{
  overflow: hidden;
}


