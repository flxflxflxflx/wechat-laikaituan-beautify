.kuangjia_box {
  display: flex;
  border-bottom: 6px solid var(--IsolationColor);
  border-top: 6px solid var(--IsolationColor);
  padding: 10px;
}

.kuangjia_box>view:nth-child(2) {
  flex: 16;
}

.kuangjia_box>view:nth-child(3) {
  flex: 3;
}

.af_box_box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 4;
  border-radius: 2px;
}

.avatar-img {
  width: 20px;
  height: 20px;
  border-radius: 50%;

}

.two_box>view {
  font-size: 15px;
}

.two_box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 0 0 20px;
}

.three_box {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.baoyou {
  flex-direction: column;
}

.baoyou_label {
  margin-left: -8px !important;
}

.van-tag {
  background-color: var(--TONGYI) !important;
}

.vanPrice {
  color: var(--TONGYI) !important;
}